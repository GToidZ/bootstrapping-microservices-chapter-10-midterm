<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">

        <title>FlixTube: Ads</title>

        <link rel="stylesheet" href="css/tailwind.min.css">
        <link rel="stylesheet" href="css/app.css">
    </head>
    <body>
        <div class="flex flex-col">
            <div class="border-b-2 bg-gray-100">
                <div class="nav flex flex-row items-center mt-1 p-2">
                    <div class="text-xl font-bold">
                        FlixTube
                    </div>
                    <div class="ml-16">
                        <a href="/">Videos</a>
                    </div>
                    <div class="ml-4">
                        <a href="/upload">Upload</a>
                    </div>
                    <div class="ml-4">
                        <a href="/history">History</a>
                    </div>
                    <div class="ml-4">
                        <a href="/advertise">Advertise</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="m-4">
            <h1>Partner Ads</h1>
            <div class="m-4">
                <div id="ads" class="m-4">
                    {{#if advertisements}}
                        {{#each advertisements}}
                            <div class="mt-1">
                                <a href="/video?id={{this.url}}"><img alt="{{this.name}}" src="{{this.image_url}}"></a> 
                            </div>
                        {{/each}}
                    {{/if}}
                </div>
            </div>
        </div>
    </body>
</html>